{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CAML",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#entry"
		}
	],
	"repository": {
		"comment": {
			"begin": "^\\t*(?=#\\p{Print}*$)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.whitespace.comment.leading.caml"
				}
			},
			"end": "(?=$)",
			"patterns": [
				{
					"begin": "#",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.caml"
						}
					},
					"end": "\\n",
					"name": "comment.line.number-sign.caml"
				}
			]
		},
		"entry": {
			"begin": "(?:(^\\t*)|\\t+)([^:=\\/?]+)?",
			"beginCaptures": {
				"2": {
					"name": "support.type.property-name.caml"
				}
			},
			"end": "(?=$)",
			"patterns": [
				{
					"include": "#string"
				},
				{
					"include": "#boolean"
				},
				{
					"include": "#number"
				},
				{
					"include": "#list"
				}
			]
		},
		"number": {
			"begin": "(?:(=)\\s*(?=\\n)|(=))",
			"beginCaptures": {
				"1": {
					"name": "invalid.illegal.unexpected-newline.caml"
				},
				"2": {
					"name": "punctuation.separator.key-value.entry.caml"
				}
			},
			"end": "\\n",
			"patterns": [
				{
					"match": "\\s*([+\\-]?\\d+(?:\\.\\d+)?(?:e[+\\-]?\\d+)?)\\s*(?=\\n)",
					"captures": {
						"1": {
							"name": "constant.numeric.caml"
						}
					}
				},
				{
					"match": "[^\\s]+",
					"name": "invalid.illegal.invalid-numeric-value.caml"
				}
			]
		},
		"boolean": {
			"begin": "(?:(\\?)\\s*(?=\\n)|(\\?))",
			"beginCaptures": {
				"1": {
					"name": "invalid.illegal.unexpected-newline.caml"
				},
				"2": {
					"name": "punctuation.separator.key-value.entry.caml"
				}
			},
			"end": "\\n",
			"patterns": [
				{
					"match": "(?i)\\s*(yes|no|y|n|true|false)\\s*(?=\\n)",
					"captures": {
						"1": {
							"name": "constant.language.caml"
						}
					}
				},
				{
					"match": "[^\\s]+",
					"name": "invalid.illegal.invalid-boolean-value.caml"
				}
			]
		},
		"string": {
			"begin": ":",
			"beginCaptures": {
				"0": {
					"name": "punctuation.separator.key-value.entry.caml"
				}
			},
			"end": "\\n",
			"patterns": [
				{
					"match": ".+",
					"name": "string.unquoted.caml"
				}
			]
		},
		"list": {
			"begin": "/",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.list.begin.caml"
				}
			},
			"end": "\\n",
			"patterns": [
				{
					"match": "[^\\s]+",
					"name": "invalid.illegal.expected-newline-after-slash.caml"
				}
			]
		}
	},
	"scopeName": "source.caml"
}
